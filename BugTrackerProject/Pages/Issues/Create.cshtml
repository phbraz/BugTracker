@page
@model BugTrackerProject.Pages.Issues.Create


<div class="container">
    <form method="post">
        <div class="form-floating mb-3">
            <input asp-for="Issue.Title" class="form-control"  required="required"/>
            <label asp-for="Issue.Title" class="form-label"></label>
        </div>
        
        <div class="form-floating">
            <textarea style="height: 178px" asp-for="Issue.Description" class="form-control" required="required"></textarea>
            <label asp-for="Issue.Description" class="form-label"></label>
        </div>
        
        <div class="mt-4">
            <button id="submitTicket" type="submit" class="w-100 btn btn-lg btn-primary btn-once">Submit Ticket</button>
        </div>

    </form>

</div>

@section Scripts {
    <script type="text/javascript">
        $('#submitTicket').click(() => {
            $(this).prop('disabled', true)
        })
    </script>

}
